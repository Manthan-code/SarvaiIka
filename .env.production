# Production Environment Configuration
NODE_ENV=production
PORT=5001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres-prod:5432/aiagent_prod
POSTGRES_DB=aiagent_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=60000

# Redis Configuration
REDIS_URL=redis://redis-prod:6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# Qdrant Configuration
QDRANT_URL=http://qdrant-prod:6333
QDRANT_API_KEY=${QDRANT_API_KEY}

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=https://aiagent.com,https://admin.aiagent.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn
LOG_FORMAT=combined
LOG_FILE=./logs/production.log

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/production
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# AI Services
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
OPENAI_MODEL=gpt-4
ANTHROPIC_MODEL=claude-3-sonnet-20240229
OPENAI_MAX_TOKENS=2000

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
EMAIL_FROM=noreply@aiagent.com

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
SENTRY_TRACES_SAMPLE_RATE=0.01

# Frontend URLs
PRODUCTION_FRONTEND_URL=https://aiagent.com

# Security
SESSION_SECRET=${SESSION_SECRET}

# Backup Configuration
BACKUP_S3_BUCKET=aiagent-production-backups
AWS_REGION=us-east-1
VERIFY_RESTORE=false

# Notification
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
NOTIFICATION_EMAIL=alerts@aiagent.com

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/aiagent.crt
SSL_KEY_PATH=/etc/ssl/private/aiagent.key

# Performance
CLUSTER_MODE=true
WORKER_PROCESSES=auto

# Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# API Limits
API_RATE_LIMIT_PER_HOUR=1000
API_BURST_LIMIT=50

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_CHAT_HISTORY=true
FEATURE_FILE_UPLOAD=true
FEATURE_ADMIN_PANEL=true
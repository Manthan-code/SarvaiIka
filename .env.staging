# Staging Environment Configuration
NODE_ENV=staging
PORT=5001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres-staging:5432/aiagent_staging
POSTGRES_DB=aiagent_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
DB_POOL_MAX=15
DB_POOL_MIN=3

# Redis Configuration
REDIS_URL=redis://redis-staging:6379
REDIS_DB=0

# Qdrant Configuration
QDRANT_URL=http://qdrant-staging:6333

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=https://staging.aiagent.com,https://staging-admin.aiagent.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=./logs/staging.log

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/staging
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# AI Services
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
OPENAI_MODEL=gpt-4
ANTHROPIC_MODEL=claude-3-sonnet-20240229
OPENAI_MAX_TOKENS=2000

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
EMAIL_FROM=staging@aiagent.com

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
SENTRY_TRACES_SAMPLE_RATE=0.1

# Frontend URLs
STAGING_FRONTEND_URL=https://staging.aiagent.com

# Security
SESSION_SECRET=${SESSION_SECRET}

# Backup Configuration
BACKUP_S3_BUCKET=aiagent-staging-backups
AWS_REGION=us-east-1

# Notification
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}
NOTIFICATION_EMAIL=staging-alerts@aiagent.com
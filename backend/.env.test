# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=test_qdrant_api_key_for_testing_purposes_only

# Server Configuration
PORT=3001
NODE_ENV=test
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=error
LOG_FILE=logs/test.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=test_session_secret_for_testing_purposes_minimum_32_characters_long

# Email (Test configuration)
